<?xml version="1.0" encoding="utf-8"?>
<OfxImageEffectResource>
	<OfxPlugin name="com.sonycreativesoftware:smart_zoom">
		<OfxResourceSet ofxHost="default">
			<OfxPropLabel>Умный зум VEGAS</OfxPropLabel>
			<OfxPropShortLabel>Умный зум VEGAS</OfxPropShortLabel>
			<OfxPropLongLabel>Умный зум VEGAS</OfxPropLongLabel>
			<OfxImageEffectPluginPropGrouping>VEGAS</OfxImageEffectPluginPropGrouping>			
			<OfxPropPluginDescription>Высококачественный зум VEGAS</OfxPropPluginDescription>
			<OfxImageEffectContext name="default">
				<OfxParamTypeDouble3D name="LocationAndZoom">
					<OfxPropLabel>Отрезок</OfxPropLabel>
			        <OfxPropShortLabel>Отрезок</OfxPropShortLabel>
			        <OfxPropLongLabel>Отрезок</OfxPropLongLabel>
					<OfxParamPropHint>Расположение и зум в отрезке</OfxParamPropHint>
				</OfxParamTypeDouble3D>
				<OfxParamTypeDouble name="Noise">
					<OfxPropLabel>Чувствительность шума</OfxPropLabel>
			        <OfxPropShortLabel>Чувствительность шума</OfxPropShortLabel>
			        <OfxPropLongLabel>Чувствительность шума</OfxPropLongLabel>
					<OfxParamPropHint>Уровень шума изображения</OfxParamPropHint>
				</OfxParamTypeDouble>
				<OfxParamTypeBoolean name="EnableEnhancement">
					<OfxPropLabel>Включить улучшение</OfxPropLabel>
			        <OfxPropShortLabel>Включить улучшение</OfxPropShortLabel>
			        <OfxPropLongLabel>Включить улучшение</OfxPropLongLabel>
					<OfxParamPropHint>Включение или выклчение умного улучшения</OfxParamPropHint>
				</OfxParamTypeBoolean>
				<OfxMessage name="GenericError">
				    Фатальная ошибка плагина
				</OfxMessage>
				<OfxMessage name="FrameFormatNotSupported">
				    Указанный формат кадра не поддерживается. Пожалуйста, выберите 8-битный или 32-битный RGBA с плавающей точкой в настройках проекта.
				</OfxMessage>
				<OfxMessage name="OpenCLMissing">
				    Плагину требуется OpenCL для работы
				</OfxMessage>
				<OfxMessage name="OpenCLError">
				    Ошибка OpenCL
				</OfxMessage>
				<OfxMessage name="OpenCLMemoryError">
				    Недостаточно памяти OpenCL GPU. Пожалуйста, попробуйте еще раз с изображениями в более низком разрешении или с меньшим количеством видео эффектов OpenCL.
				</OfxMessage>
				<OfxMessage name="OpenCLImageSizeError">
				    Слишком большое разрешение проекта. Пожалуйста, попробуйте еще раз с изображениями более низкого разрешения.
				</OfxMessage>
			</OfxImageEffectContext>
		</OfxResourceSet>
	</OfxPlugin>
</OfxImageEffectResource>
